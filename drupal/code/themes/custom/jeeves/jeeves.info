name = Jeeves
description = Responsive theme for Jeeves.
core = 7.x
engine = phptemplate
version = "7.x-1.0"

; Stylesheets
stylesheets[all][] = css/jeeves.css
stylesheets[all][] = scripts/jquery.selectbox/css/jquery.selectbox.css
stylesheets[all][] = css/jeeves_custom.css
stylesheets[screen][] = css/ie.css
stylesheets[print][] = css/print.css

; Panels settings
api[panels][styles][version] = 3
plugins[panels][layouts] = templates/panels/layouts

; Javascripts
scripts[] = scripts/modernizr-2.6.2.min.js
scripts[] = scripts/tinynav.min.js
scripts[] = scripts/jeeves.js
scripts[] = scripts/setbackground.js
scripts[] = scripts/jquery.selectbox/js/jquery.selectbox-0.2.min.js

; Regions
regions[header_primary] = 'Header primary'
regions[header_secondary] = 'Header secondary'
regions[content] = 'Content'
regions[menu_tabs] = 'Menu tabs'
regions[footer_primary] = 'Footer primary'
regions[footer_col_2] = 'Footer column 2'
regions[footer_col_3] = 'Footer column 3'
regions[footer_col_4] = 'Footer column 4'

; Theme settings
features[] = logo
features[] = name
features[] = slogan
features[] = favicon
features[] = main_menu
features[] = secondary_menu
