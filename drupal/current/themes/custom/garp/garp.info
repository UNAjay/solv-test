name = Garp
description = Responsive theme for Garp.
core = 7.x
base theme = jeeves
engine = phptemplate
version = "7.x-1.0"

; Stylesheets
stylesheets[all][] = css/garp.css
stylesheets[print][] = css/print.css

; Panels settings
api[panels][styles][version] = 3
plugins[panels][layouts] = templates/panels/layouts

; Javascripts
scripts[] = scripts/garp.js

; Regions
regions[header_primary] = 'Header primary'
regions[header_secondary] = 'Header secondary'
regions[content] = 'Content'
regions[menu_tabs] = 'Menu tabs'
regions[footer_primary] = 'Footer primary'
regions[footer_col_2] = 'Footer column 2'
regions[footer_col_3] = 'Footer column 3'
regions[footer_col_4] = 'Footer column 4'

; Theme settings
features[] = logo
features[] = name
features[] = slogan
features[] = favicon
features[] = main_menu
features[] = secondary_menu
